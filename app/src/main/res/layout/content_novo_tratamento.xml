<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Tratamento.TratamentoNovoActivity"
    tools:showIn="@layout/tratamento_novo_activity"
    android:theme="@style/AppTheme.TextInputLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tratamento"
                        android:textColor="#019587" />
                    <Spinner
                        android:layout_margin="10dp"
                        android:id="@+id/tratamento_spn_nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Spinner>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_card_duracao"
                    tools:context=".activity.NovoTratamentoActivity">

                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ínicio do Tratamento"
                        android:textColor="#019587" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="#cecece"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/medicamento_lnl_inicial"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                >
                                <TextView
                                    android:layout_weight="0.2"
                                    android:textSize="10sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/novotratamento_data"
                                    android:id="@+id/medicamento_txv_inicialdata" />
                                <TextView
                                    android:layout_weight="0.8"
                                    android:layout_width="match_parent"
                                    android:textSize="30sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/novotratamento_dia"
                                    android:id="@+id/medicamento_txv_inicialdia" />
                            </LinearLayout>

                           <!-- <LinearLayout
                                android:id="@+id/medicamento_lnl_final"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                >
                                <TextView
                                    android:layout_weight="0.2"
                                    android:textSize="10sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/novotratamento_data"
                                    android:id="@+id/medicamento_txv_finaldata" />
                                <TextView
                                    android:layout_weight="0.8"
                                    android:layout_width="match_parent"
                                    android:textSize="30sp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/novotratamento_dia"
                                    android:id="@+id/medicamento_txv_finaldia" />
                            </LinearLayout>-->
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_card_termino"
                    tools:context=".activity.NovoTratamentoActivity">

                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Previsão de Término"
                        android:textColor="#019587" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="#cecece"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                 android:id="@+id/medicamento_lnl_final"
                                 android:orientation="vertical"
                                 android:layout_width="0dp"
                                 android:layout_height="match_parent"
                                 android:layout_weight="0.5"
                                 >
                                 <TextView
                                     android:layout_weight="0.2"
                                     android:textSize="10sp"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:gravity="center"
                                     android:text="@string/novotratamento_data"
                                     android:id="@+id/medicamento_txv_finaldata" />
                                 <TextView
                                     android:layout_weight="0.8"
                                     android:layout_width="match_parent"
                                     android:textSize="30sp"
                                     android:layout_height="wrap_content"
                                     android:gravity="center"
                                     android:text="@string/novotratamento_dia"
                                     android:id="@+id/medicamento_txv_finaldia" />
                             </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
