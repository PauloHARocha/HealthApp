<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.MedicamentoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:theme="@style/Base.Theme.AppCompat.Light"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tratamento"
                    android:textColor="#019587"
                    android:id="@+id/tratamento_txv_nome" />
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicamento"
                    android:textColor="#019587" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/secondary_text_light"
                    android:text="Rifamcina"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/medicamento_txv_nome"
                    android:singleLine="true"/>-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantidade"
                    android:textColor="#019587"
                     />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/secondary_text_light"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="14sp"
                    android:id="@+id/medicamento_txv_qtd"
                    />

               <!-- <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cor"
                    android:textColor="@color/colorPrimary"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/amarelo"
                    android:id="@+id/medicamento_iv_cor"
                     />-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HorÃ¡rio do lembrete"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/medicamento_txv_horario_lembrete"
                    android:textColor="@android:color/secondary_text_light"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="08:00"
                    android:inputType="time"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data de inicio"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/medicamento_txv_data_inicio"
                    android:textColor="@android:color/secondary_text_light"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="16/07/2016"
                    android:inputType="date"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data de fim"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/medicamento_txv_data_final"
                    android:textColor="@android:color/secondary_text_light"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="21/07/2018"
                    android:inputType="date"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
